<!DOCTYPE html>
<html lang="ja">
<head>
<%- include('./common/commonHead') %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">パスワード変更(<%= userid %>)</h3>
          </div>
          <div class="panel-body">
            <form role="form" name="form" method="post" autocomplete="off">
              <!-- security setting -->
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <fieldset>
                <div class="form-group">
                  <input class="form-control" placeholder="旧パスワード" id="oldPassword"
                   name="oldPassword" value="" autofocus>
                </div>
                <div class="form-group">
                  <input class="form-control" placeholder="新パスワード" id="newPassword2"
                   name="newPassword2" type="password" value="" autofocus>
                </div>
                <div class="form-group">
                  <input class="form-control" placeholder="新パスワード再入力" id="newPassword3"
                   name="newPassword3" value="" type="password">
                </div>
                <button type="submit" class="btn btn-lg btn-success btn-block"
                 formaction="./password">変更</button>
              </fieldset>
            </form>
              <% if (typeof result !== "undefined" && result === "invalidpassword") { %>
                <p class="text-danger">入力したパスワードは正しくないようです</p>
              <% }else if (typeof result !== "undefined" && result === "success") { %>
                <p class="text-success">Successful password change</p>
              <% }; %>
          </div>
          <div class="panel-footer">
            <a href="/">Topへ戻る</a>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include('./common/commonScripts') %>
<%- include('./common/commonScriptsValidate') %>
<%- include('./common/commonScriptsPasswordStrength') %>
</body>
</html>