<!DOCTYPE html>
<html lang="ja">
<head>
<%- include('./common/commonHead') %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">ログイン</h3>
          </div>
          <div class="panel-body">
            <form role="form" name="form" method="post" autocomplete="off">
              <!-- security setting -->
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <fieldset>
                <div class="form-group">
                  <input class="form-control" placeholder="ログインID" name="userid" value="" autofocus>
                </div>
                <div class="form-group">
                  <input class="form-control" placeholder="パスワード" name="password" value="" type="password">
                </div>
                <button type="submit" class="btn btn-lg btn-success btn-block" formaction="./login">Login</button>
              </fieldset>
            </form>
            <% if (typeof result !== "undefined") { %>
              <p class="text-danger"><%= result %></p>
            <% }; %>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include('./common/commonScripts') %>
</body>
</html>